<mvc:View   controllerName="git.controller.Main"
            xmlns="sap.m"
            xmlns:f="sap.f"
            xmlns:mvc="sap.ui.core.mvc">

    <f:DynamicPage id="dynamicPage">

        <f:title>

            <f:DynamicPageTitle id="dynamicPageHeader">

                <f:heading>

                    <Title id="titleMain"
                            text="{i18n>appTitle}"/>

                </f:heading>
            
            </f:DynamicPageTitle>
        
        </f:title>

        <f:content>

            <List id="table"
                    items="{users>/Users}">

                <headerToolbar>
                    <Toolbar id="toolbar">
                        <Title id="headerTitble"
                                text="{i18n>users}"/>
                    <ToolbarSpacer id="toolbarSpacer"/>
                    <Input id="search"
                            submit="onFilterSubmit"
                            width="40%"/>
                    </Toolbar>
                </headerToolbar>

                <items>

                    <StandardListItem id="standarListItem"
                                        title="{users>FullName}"
                                        description="{users>ID}"/>

                </items>

            </List>
        
        </f:content>

    </f:DynamicPage>

</mvc:View>