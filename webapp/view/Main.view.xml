<mvc:View   controllerName="git.controller.Main"
            xmlns="sap.m"
            xmlns:f="sap.f"
            xmlns:mvc="sap.ui.core.mvc">

    <f:DynamicPage id="dynamicPage">

        <f:title>

            <f:DynamicPageTitle id="dynamicPageHeader">

                <f:heading>

                    <Title id="titleMain"
                            text="{i18n>appTitle}"/>

                </f:heading>
            
            </f:DynamicPageTitle>
        
        </f:title>

        <f:content>

            <Table id="table"
                    items="{users>/Users}">

                <headerToolbar>
                    <Toolbar id="toolbar">
                        <Title id="headerTitble"
                                text="{i18n>users}"/>
                    <ToolbarSpacer id="toolbarSpacer"/>
                    <SearchField id="search"
                            search="onFilterSearch"
                            width="40%"/>
                    </Toolbar>
                </headerToolbar>

                <columns>

                    <Column id="id">
                        <Text id="textID"
                                text="{i18n>id}"/>
                    </Column>

                    <Column id="fullName">
                        <Text id="textFullName"
                                text="{i18n>fullName}"/>
                    </Column>

                    <Column id="location">
                        <Text id="textLocation"
                                text="{i18n>location}"/>
                    </Column>

                    <Column id="email">
                        <Text id="textEmail"
                                text="{i18n>email}"/>
                    </Column>

                    <Column id="phoneNumber">
                        <Text id="textPhoneNumber"  
                                text="{i18n>phoneNumber}"/>
                    </Column>
                
                </columns>

                <items>

                    <ColumnListItem id="columnListItem">
                    
                        <cells>

                            <ObjectIdentifier id="user-id"
                                            text="{users>ID}"/>
                            <Label id="user-fullName"
                                    text="{users>FullName}"/>
                            <Label id="user-location"
                                    text="{users>Location}"/>
                            <Label
                                    id="user-email"
                                    text="{users>Email}"/>
                            <Label id="user-phoneNumber"
                                    text="{users>PhoneNumber}"/>
                        </cells>

                    </ColumnListItem>

                </items>

            </Table>
        
        </f:content>

    </f:DynamicPage>

</mvc:View>